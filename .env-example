POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=shiptracer
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ===========================================
# Облачный PostgreSQL (раскомментируйте для production)
# Для облачного хранения используйте внешний managed PostgreSQL
# (например: AWS RDS, DigitalOcean Managed Database, Azure Database и т.д.)
# ===========================================
# POSTGRES_HOST=your-postgres-cloud-host.com
# POSTGRES_PORT=5432
# POSTGRES_USER=your_postgres_user
# POSTGRES_PASSWORD=your_postgres_password
# DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}
# Пример для AWS RDS:
# DATABASE_URL=postgresql://user:password@your-db-instance.region.rds.amazonaws.com:5432/shiptracer
# Пример для DigitalOcean:
# DATABASE_URL=postgresql://user:password@db-postgresql-fra1-12345.db.ondigitalocean.com:25060/shiptracer?sslmode=require

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=YOUR_REDIS_PASSWORD

# URL подключения к Redis (для локальной разработки формируется автоматически)
# REDIS_URL=redis://redis:6379/0

# ===========================================
# Облачный Redis (раскомментируйте для production)
# Для облачного хранения используйте внешний managed Redis
# (например: AWS ElastiCache, DigitalOcean Managed Redis, Redis Cloud и т.д.)
# ===========================================
# REDIS_HOST=your-redis-cloud-host.com
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password
# REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}
# Пример для Redis Cloud:
# REDIS_URL=redis://:password@redis-12345.c123.us-east-1-1.ec2.cloud.redislabs.com:12345/0
# Пример для AWS ElastiCache:
# REDIS_URL=redis://your-elasticache-cluster.cache.amazonaws.com:6379/0

ENVIRONMENT=development
# ENVIRONMENT=production

# Порт приложения
APP_PORT=8000
APP_HOST=0.0.0.0

# Секретный ключ для подписи токенов (замените на случайную строку)
SECRET_KEY_SHIPAPI=YOUR_SECRET_KEY

# ===========================================
# AIS WebSocket конфигурация (опционально)
# ===========================================
# AIS_WEBSOCKET_URL=wss://example.com/ais-stream
# AIS_UPDATE_INTERVAL=60

LOG_LEVEL=INFO
# LOG_LEVEL=DEBUG
# LOG_LEVEL=WARNING
# LOG_LEVEL=ERROR

# ===========================================
# Облачное хранилище файлов (S3/MinIO) - опционально
# Раскомментируйте для хранения файлов, бэкапов, логов в облаке
# ===========================================
# AWS S3
# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=ship-tracer-data
# AWS_S3_ENDPOINT_URL=

# MinIO (S3-совместимое хранилище, локальное для разработки)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=ship-tracer-data
MINIO_SECURE=false

# Использовать S3 или MinIO (s3 или minio)
STORAGE_TYPE=minio

# Сохранять логи в облачное хранилище (true/false)
LOG_TO_CLOUD=false
LOG_S3_BUCKET=ship-tracer-logs
